<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E6"
    tools:context=".DeficienciasIntelectuaisActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF7700"
            android:gravity="center"
            android:padding="16dp"
            android:text="DEFICIÊNCIAS SENSORIAIS"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Texto explicativo -->
        <TextView
            android:id="@+id/textoExplicativo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="Deficiências sensoriais afetam a percepção do mundo, impactando a visão, audição, tato, olfato ou paladar, exigindo adaptações para garantir inclusão e acessibilidade."
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Cards com botões -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:paddingTop="16dp"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <!-- Down -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="192dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="CEGUEIRA"
                    android:textColor="#FF7700"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <Button
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF7700"
                    android:onClick="abrirCegueira"
                    android:text="Clique e saiba mais"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Cri -->
            <LinearLayout
                android:layout_width="7dp"
                android:layout_height="186dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="SURDEZ"
                    android:textColor="#FF7700"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF7700"
                    android:onClick="abrirSurdez"
                    android:text="Clique e saiba mais"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Angelman -->

            <!-- Poliomielite -->
        </GridLayout>

    </LinearLayout>
</ScrollView>
