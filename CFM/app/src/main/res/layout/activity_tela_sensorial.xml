<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F5FF"
    tools:context=".DeficienciasIntelectuaisActivity">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEFICIÊNCIAS INTELECTUAIS"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:gravity="center"
            android:padding="16dp"
            android:background="#7700FF"
            android:textStyle="bold" />

        <!-- Texto explicativo -->
        <TextView
            android:id="@+id/textoExplicativo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deficiências intelectuais afetam o desenvolvimento cognitivo, dificultando a aprendizagem, a comunicação e a autonomia em diferentes níveis."
            android:textSize="16sp"
            android:paddingTop="12dp"
            android:textColor="#333333" />

        <!-- Cards com botões -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:paddingTop="16dp"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <!-- Down -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="192dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="DOWN"
                    android:textColor="#7700FF"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <Button
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#7700FF"
                    android:onClick="abrirDown"
                    android:text="Clique e saiba mais"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Cri -->
            <LinearLayout
                android:layout_width="7dp"
                android:layout_height="186dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="CRI"
                    android:textColor="#7700FF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#7700FF"
                    android:onClick="abrirCri"
                    android:text="Clique e saiba mais"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Angelman -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="ANGELMAN"
                    android:textColor="#7700FF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#7700FF"
                    android:onClick="abrirAngelman"
                    android:text="Clique e saiba mais"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Poliomielite -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="WILLIAMS"
                    android:textColor="#7700FF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#7700FF"
                    android:onClick="abrirWilliams"
                    android:text="Clique e saiba mais"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </GridLayout>

    </LinearLayout>
</ScrollView>
